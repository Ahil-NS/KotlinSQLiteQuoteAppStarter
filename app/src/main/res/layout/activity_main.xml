<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controller.MainActivity">
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="170dp"
            android:layout_height="149dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/progressBar" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:visibility="gone" app:layout_constraintHorizontal_bias="0.48"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/getStarterButton"
    />
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/quoteText"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="parent" android:hint="@string/enter_quote"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/quoteUserText"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:hint="@string/enter_user_name" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/quoteText"/>
    <Button
            android:text="@string/get_started"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:id="@+id/getStarterButton" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/quoteUserText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:background="@android:color/holo_green_dark"
            android:textColor="@android:color/white"/>
</android.support.constraint.ConstraintLayout>